{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "build",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "types": ["@types/chrome"],
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["./src/popup/app/*"],
      "@pages/*": ["./src/popup/pages/*"],
      "@widgets/*": ["./src/popup/widgets/*"],
      "@features/*": ["./src/popup/features/*"],
      "@entities/*": ["./src/popup/entities/*"],
      "@shared/*": ["./src/popup/shared/*"],
      "@types": ["./src/popup/shared/lib/types.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build"]
}
